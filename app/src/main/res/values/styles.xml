<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PinLock" >
        <item name="pinLength">4</item>
        <item name="backgroundColor">@color/colorPrimaryDark</item>

        <item name="keypadButtonShape">@drawable/pin_rect_btn</item>
        <item name="keypadTextColor">@color/white</item>
        <item name="keypadTextSize">20</item>
        <item name="keypadWidth">200dp</item>
        <item name="keypadHeight">230dp</item>
        <item name="keypadVerticalSpacing">10dp</item>
        <item name="keypadHorizontalSpacing">10dp</item>
        <item name="keypadClickAnimationDuration">100</item>

        <item name="cancelForgotTextColor">@color/white</item>
        <item name="cancelForgotTextSize">14</item>

        <item name="infoTextColor">@color/white</item>
        <item name="infoTextSize">20</item>

        <item name="vibrateOnClick">false</item>
        <item name="vibrateDuration">20</item>

        <item name="statusEmptyBackground">@drawable/dot_empty</item>
        <item name="statusFilledBackground">@drawable/dot_filled</item>
        <item name="statusDotDiameter">14dp</item>
        <item name="statusDotSpacing">15dp</item>
    </style>

</resources>
